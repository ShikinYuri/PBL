<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forum.mapper.RootMapper">

    <resultMap id="BaseResultMap" type="com.forum.entity.Root">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="active" property="active"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findByUserId" resultMap="BaseResultMap">
        select id, user_id, active, create_time from `root` where user_id = #{userId} limit 1
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select id, user_id, active, create_time from `root` order by create_time desc limit #{offset}, #{limit}
    </select>

    <select id="countAll" resultType="int">
        select count(*) from `root`
    </select>

    <insert id="insert" parameterType="com.forum.entity.Root" useGeneratedKeys="true" keyProperty="id">
        insert into `root` (user_id, active) values (#{userId}, #{active})
    </insert>

    <update id="update" parameterType="com.forum.entity.Root">
        update `root` <set>
            <if test="active != null">active = #{active},</if>
        </set> where id = #{id}
    </update>

    <delete id="deleteByUserId">
        delete from `root` where user_id = #{userId}
    </delete>

</mapper>
